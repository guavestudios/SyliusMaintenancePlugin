{
    "name": "synolia/sylius-maintenance-plugin",
    "type": "sylius-plugin",
    "description": "Plugin for Sylius when your website is under maintenance",
    "keywords": [
        "sylius",
        "sylius-plugin",
        "maintenance"
    ],
    "license": "EUPL-1.2",
    "require": {
        "php": "^7.4 || ^8.0",
        "sylius/sylius": "^1.9",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "dbrekelmans/bdi": "1.0",
        "friendsoftwig/twigcs": "6.0.0",
        "phpmd/phpmd": "2.12.0",
        "phpro/grumphp": "1.13.0",
        "phpspec/phpspec": "7.2.0",
        "phpstan/extension-installer": "1.1.0",
        "phpstan/phpstan": "1.8.2",
        "phpstan/phpstan-doctrine": "1.3.11",
        "phpstan/phpstan-phpunit": "1.1.1",
        "phpstan/phpstan-strict-rules": "1.3.0",
        "phpstan/phpstan-webmozart-assert": "1.2.0",
        "phpunit/phpunit": "9.5.21",
        "sylius-labs/coding-standard": "4.1.1",
        "symfony/browser-kit": "5.4.3",
        "symfony/debug-bundle": "5.4.3",
        "symfony/dotenv": "5.4.5",
        "symfony/intl": "5.4.10",
        "symfony/panther": "1.1.2",
        "symfony/web-profiler-bundle": "5.4.10"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Synolia\\SyliusMaintenancePlugin\\": "src/",
            "Tests\\Synolia\\SyliusMaintenancePlugin\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php bin/create_node_symlink.php"
        ],
        "post-update-cmd": [
            "php bin/create_node_symlink.php"
        ],
        "post-create-project-cmd": [
            "php bin/create_node_symlink.php"
        ],
        "fix-ecs": "ecs check -c ruleset/ecs.php --fix --ansi --clear-cache ."
    }
}
